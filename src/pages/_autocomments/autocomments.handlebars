{{#> base }}

<div class="container-fluid autocomments-page">
    <h3>Автокомментарии</h3>
    <p>Система будет отправлять ответы пользователям по ключевым словам комментариев.</p>

    <div class="container-fluid">
        <div class="row">
        <div class="col-3">
            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <a class="nav-link active" id="v-pills-create-task-tab" data-toggle="pill" href="#create-task" role="tab" aria-controls="create-task" aria-selected="false">Создать задание</a>
                <a class="nav-link" id="v-pills-all-tab" data-toggle="pill" href="#all-tasks" role="tab" aria-controls="all-tasks" aria-selected="true">История заданий</a>
                <a class="nav-link" id="v-pills-logs-tab" data-toggle="pill" href="#logs" role="tab" aria-controls="logs" aria-selected="true">Логи</a>
            </div>
        </div>
        <div class="col-9">
            <div class="tab-content" id="v-pills-tabContent">
                <div class="tab-pane fade show" id="all-tasks" role="tabpanel" aria-labelledby="v-pills-all-tab">
                    {{>task-status wrapperCls='tasks-all--box' listCls='tasks-all' title=""}}
                </div>
                <div class="tab-pane fade show" id="logs" role="tabpanel" aria-labelledby="v-pills-logs-tab">
                    {{>logs}}
                </div>
                <div class="tab-pane fade show active" id="create-task" role="tabpanel" aria-labelledby="v-pills-create-task-tab">
                    <div class="js_add-new-task add-new-task-box">

                        <div class="row">
                            <div class="col-md-12 form-box">
                                {{#> wizard-form }}
                                    {{> autocomments-wizard}}
                                {{/ wizard-form }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>
</div>


{{/ base }}


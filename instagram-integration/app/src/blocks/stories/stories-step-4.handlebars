{{>step-header title=titleHeader subTitle=subTitle}}
<div class="form-bottom">
    <div class="row">
        <div class="form-group col-md-6 col-sm-6">
            <label class="" for="limit">Лимит просмотров</label>
            <input type="number" class="form-control" placeholder="Лимит подписок" name="limit" id="limit" min="0" max="100000" value="9999">
        </div>
    </div>
    <div class="row js_post-count d-none">
        <div class="form-group col-md-6 col-sm-6">
            <label class="" for="post-count">Количество публикаций для мониторинга</label>
            <input type="number" class="form-control" placeholder="Количество публикаций" name="post-count" id="post-count" min="0" max="20" value="3">
        </div>
    </div>
    <div class="row js_stories-competitors d-none">
        <div class="form-group col-md-6 col-sm-6">
            <label class="">Конкуренты</label>
            <input type="text" value="" data-role="tagsinput" class="form-control stories-competitors mb-2" />
        </div>
    </div>
    <div class="row js_smooth-starting my-3 d-none">
        <div class="form-group col-md-6 col-sm-6">
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="smooth_starting" checked>
                <label class="custom-control-label" for="smooth_starting">Плавный старт</label>
            </div>
        </div>
    </div>

    <button type="button" class="btn btn-blue btn-previous">Назад</button>
    <button type="submit" class="btn btn-blue js_stories-competitors-btn">Запустить</button>
</div>

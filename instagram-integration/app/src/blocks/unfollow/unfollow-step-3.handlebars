{{>step-header title=titleHeader subTitle=subTitle}}
<div class="form-bottom">
    <div class="row js_smooth-starting my-3 d-none">
        <div class="form-group col-md-6 col-sm-6">
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="smooth_starting" checked>
                <label class="custom-control-label" for="smooth_starting">Плавный старт</label>
            </div>
        </div>
    </div>
    <div class="form-group row col-lg-12">
        {{!-- <label class="col-3 col-form-label">Скорость</label> --}}
        <div class="col-9 js_task-mode">
            {{!-- follow-speed from Ajax
                    9 простмотров в час
                --}}
        </div>
    </div>
    <div class="add-file d-none">
        <div class="form-group col-md-8 col-sm-8">
            {{!-- <textarea class="form-control" rows="4" placeholder="Введите ИД-пользователей через запятую" id="followers"></textarea> --}}
            <div class="file-upload-container">
                <label for="txt-file" class="label-chous btn btn-success">Добавить файл</label>
                <input type="file" class="input-txt-file" id="txt-file" name="txt-file"/>
            </div>
        </div>
    </div>

    <button type="button" class="btn btn-blue btn-previous">Назад</button>
    <button type="submit" class="btn btn-blue" disabled="disabled">Запустить</button>
</div>

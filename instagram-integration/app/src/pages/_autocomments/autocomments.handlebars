{{#> base }}

<div class="container-fluid automessages-page">
    <h3>Автокомментарии</h3>
    {{!-- <p>Система будет отправлять сообщения пользователям по ключевым словам.</p> --}}

    <div class="container-fluid">
        <div class="row">
        <div class="col-3">
            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <a class="nav-link active" id="v-pills-create-task-tab" data-toggle="pill" href="#create-task" role="tab" aria-controls="create-task" aria-selected="false">Создать задание</a>
                <a class="nav-link" id="v-pills-all-tab" data-toggle="pill" href="#all-tasks" role="tab" aria-controls="all-tasks" aria-selected="true">История заданий</a>
                <a class="nav-link" id="v-pills-logs-tab" data-toggle="pill" href="#logs" role="tab" aria-controls="logs" aria-selected="true">Логи</a>
            </div>
        </div>
        <div class="col-9">
            <div class="tab-content" id="v-pills-tabContent">
                {{!-- <div class="tab-pane fade show" id="runned" role="tabpanel" aria-labelledby="v-pills-runned-tab">
                    {{>task-status wrapperCls='tasks-runs--box' listCls = 'tasks-runs' title='Запущеные'}}
                </div>
                <div class="tab-pane fade show" id="stopped-tasks" role="tabpanel" aria-labelledby="v-pills-stopped-tab">
                    {{>task-status wrapperCls='tasks-stopped--box' listCls='tasks-stopped' title='Остановленные'}}
                </div> --}}
                <div class="tab-pane fade show" id="all-tasks" role="tabpanel" aria-labelledby="v-pills-all-tab">
                    {{!-- > dropdown wrapperCls='subtype' selectBoxCls='subtype-select-wrapper' title='Тип' --}}
                    {{!-- task-status has one subtype, so do not add dropdown--}}
                    {{>task-status wrapperCls='tasks-all--box' listCls='tasks-all' title=""}}
                </div>
                <div class="tab-pane fade show" id="logs" role="tabpanel" aria-labelledby="v-pills-logs-tab">
                    {{>logs}}
                </div>
                <div class="tab-pane fade show active" id="create-task" role="tabpanel" aria-labelledby="v-pills-create-task-tab">
                    <div class="js_add-new-task">
                        
                        <div class="row">
                            <div class="col-md-12 form-box">
                                {{#> wizard-form }}
                                    {{> autocomments-wizard}}
                                {{/ wizard-form }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>
</div>


{{/ base }}

